<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pig4cloud.pig.goods.goodsPic.mapper.GoodsPicMapper">

	<resultMap id="goodsPicMap" type="com.pig4cloud.pig.goods.goodsPic.entity.GoodsPic">
		<id property="id" column="id"/>
		<result property="goodsId" column="goods_id"/>
		<result property="attId" column="att_id"/>
		<result property="type" column="type"/>
	</resultMap>

	<!--goodsPic简单分页查询-->
	<select id="getGoodsPicPage" resultMap="goodsPicMap">
		SELECT
		id,
		goods_id,
		att_id,
		type
		FROM fx_goods_pic
		<where>
			<if test="goodsPic.id != null">
				AND id = #{goodsPic.id}
			</if>
			<if test="goodsPic.goodsId != null">
				AND goods_id = #{goodsPic.goodsId}
			</if>
			<if test="goodsPic.attId != null and goodsPic.attId.trim() != ''">
				AND att_id = #{goodsPic.attId}
			</if>
			<if test="goodsPic.type != null">
				AND type = #{goodsPic.type}
			</if>
		</where>
	</select>
	<select id="listGoodsPicByGoodsId" resultMap="goodsPicMap">
		SELECT
		id,
		goods_id,
		att_id,
		type
		FROM fx_goods_pic where goods_id = #{goodsId}
	</select>

	<delete id="removeByGoodsId">
		DELETE FROM fx_goods_pic WHERE goods_id = #{goodsId}
	</delete>


</mapper>
